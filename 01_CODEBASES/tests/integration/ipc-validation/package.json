{
  "name": "@localbrain/ipc-validation-tests",
  "version": "1.0.0",
  "description": "Schema validation tests for LocalBrain IPC system (T017)",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "benchmark": "ts-node benchmarks/performance-benchmarks.ts",
    "test:all": "npm run test && npm run benchmark"
  },
  "keywords": [
    "localbrain",
    "ipc",
    "validation",
    "testing",
    "schema"
  ],
  "author": "Agent D (Integration Specialist)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/typescript"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "typescript/**/*.ts",
      "!typescript/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
