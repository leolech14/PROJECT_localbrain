{
  "name": "localbrain-widget-system",
  "version": "2.0.0",
  "description": "LocalBrain v2.0.0 Widget Architecture System",
  "main": "index.js",
  "scripts": {
    "validate": "npm run validate:api && npm run validate:asyncapi && npm run validate:schemas",
    "validate:api": "npx spectral lint official-specs/apis/core/openapi.yaml -r .spectral.yml",
    "validate:asyncapi": "npx asyncapi validate official-specs/events/core/asyncapi.yaml",
    "validate:schemas": "find official-specs/schemas -name '*.json' -exec npx ajv validate -s {} --spec=draft2020 \\;",
    "lint": "npm run validate",
    "docs:generate": "npm run docs:openapi && npm run docs:asyncapi",
    "docs:openapi": "npx @redocly/cli build-docs official-specs/apis/core/openapi.yaml -o docs/openapi.html",
    "docs:asyncapi": "npx asyncapi generate fromTemplate official-specs/events/core/asyncapi.yaml @asyncapi/html-template -o docs/asyncapi",
    "docs:preview": "npx @redocly/cli preview-docs official-specs/apis/core/openapi.yaml",
    "sdk:generate": "npm run sdk:typescript && npm run sdk:python",
    "sdk:typescript": "npx @openapitools/openapi-generator-cli generate -i official-specs/apis/core/openapi.yaml -g typescript-fetch -o sdks/typescript",
    "sdk:python": "npx @openapitools/openapi-generator-cli generate -i official-specs/apis/core/openapi.yaml -g python -o sdks/python",
    "dev": "xcodebuild -project ../LocalBrain.xcodeproj -scheme LocalBrain -configuration Debug build",
    "test": "xcodebuild test -project ../LocalBrain.xcodeproj -scheme LocalBrain -destination 'platform=macOS'",
    "build": "xcodebuild build -project ../LocalBrain.xcodeproj -scheme LocalBrain -configuration Release",
    "clean": "rm -rf docs/ sdks/ build/ dist/ .xcode-build/"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.11.0",
    "@redocly/cli": "^1.25.0",
    "@asyncapi/cli": "^2.9.0",
    "@openapitools/openapi-generator-cli": "^2.13.0",
    "ajv": "^8.12.0",
    "ajv-cli": "^5.0.0"
  },
  "keywords": [
    "localbrain",
    "widget-architecture",
    "ai-powered",
    "macos",
    "swiftui",
    "openapi",
    "asyncapi"
  ],
  "author": "Orchestra LocalBrain Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/orchestra/localbrain.git"
  }
}